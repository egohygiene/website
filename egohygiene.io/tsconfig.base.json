{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // ğŸ§  Strictest Type Checking
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,

    // ğŸ“¦ Module Resolution
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "moduleDetection": "auto",
    "verbatimModuleSyntax": false,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "resolvePackageJsonExports": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@": ["src/*"]
    },
    "rootDirs": ["src", "generated"],
    "rewriteRelativeImportExtensions": true,
    "customConditions": [],

    // ğŸ›  Emit & Declarations (override per target)
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "generated/types",
    "emitDeclarationOnly": false, // Override in `tsconfig.types.json`
    "sourceMap": true,
    "outDir": "dist",
    "newLine": "lf",
    "downlevelIteration": true,
    "importHelpers": true,

    // âœ‹ Donâ€™t Emit JS by default
    "noEmit": true,

    // ğŸ“š Libraries
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    // ğŸŒ JSX defaults â€” override in app-specific config
    "jsx": "preserve",

    // ğŸ§± Project-level behavior
    "composite": false,
    "incremental": true,
    "tsBuildInfoFile": "generated/tsconfig.tsbuildinfo",

    // ğŸ‘ Debugging & Diagnostics (disabled by default)
    "pretty": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // ğŸš« JS support turned off (can override for migration)
    "allowJs": false,
    "checkJs": false,

    // ğŸ”¬ Experimental / Decorators â€” override per target
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,

    // ğŸ”’ Safe constraints (leave strict)
    "allowUmdGlobalAccess": false,
    "allowArbitraryExtensions": false,
    "allowImportingTsExtensions": false,
    "noUncheckedSideEffectImports": true,
    "noResolve": false
  },

  // ğŸ§¹ Ignore folders in base
  "exclude": ["dist", "node_modules"],

  // ğŸ•µï¸ Watch settings (opt-in)
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "_build", "temp/*"]
  }
}
