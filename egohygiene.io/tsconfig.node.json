{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",

        "outDir": "./dist-node",
        "declaration": true,
        "emitDeclarationOnly": true,
        "noEmit": false,

        "types": ["node"],
        "paths": {
            "@egohygiene/plugins/*": ["plugins/*"],
            "@egohygiene/db/*": ["db/*"],
        },
    },
    "include": ["plugins", "db", "astro.config.ts", "vite.config.ts", "vitest.config.ts"]
}
