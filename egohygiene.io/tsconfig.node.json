{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",

  "compilerOptions": {
    // ğŸ§± Project references / incremental builds
    "composite": true,

    // ğŸ›  Node.js compatibility
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // ğŸ“¦ Emit declarations for library-like code
    "declaration": true,
    "emitDeclarationOnly": true, // Only emit .d.ts (no JS)
    "noEmit": false,
    "outDir": "./dist-node",

    // ğŸŒ Node globals
    "types": ["node"],

    // ğŸ”— Workspace-style aliases for tooling packages
    "paths": {
      "@egohygiene/plugins/*": ["plugins/*"],
      "@egohygiene/db/*": ["db/*"]
    }
  },

  "include": [
    "plugins",
    "db",
    "astro.config.ts",
    "vite.config.ts",
    "vitest.config.ts"
  ],

  "exclude": [
    "dist",
    "node_modules"
  ]
}
