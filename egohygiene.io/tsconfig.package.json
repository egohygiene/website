{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",

  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "noEmitOnError": true
  },

  "include": ["src"],

  "exclude": [
    "tests",
    "node_modules",
    "dist"
  ]
}
