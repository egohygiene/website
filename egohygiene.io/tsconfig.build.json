{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",

  "compilerOptions": {
    // ðŸ“¦ Emit runtime + type info
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,

    // ðŸ”„ Output compiled files
    "outDir": "dist",

    // ðŸ§± Enable incremental builds
    "composite": true,
    "noEmitOnError": true
  },

  "include": [
    "src",
    "db",
    "plugins"
  ],

  "exclude": [
    "dist",
    "dist-node",
    "node_modules",
    "generated",
    "coverage",
    ".cache",
    "**/*.test.*"
  ]
}
