{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",

  "compilerOptions": {
    // âœ¨ Emit .d.ts only, no JS
    "declaration": true,
    "emitDeclarationOnly": true,

    // ðŸ”„ Output directory for types
    "outDir": "dist-types",

    // ðŸ›‘ Fail build if types are invalid
    "noEmitOnError": true,

    // ðŸ§± Required for incremental type-only builds
    "composite": true
  },

  "include": [
    "src",
    "db",
    "plugins"
  ],

  "exclude": [
    "dist",
    "dist-node",
    "node_modules",
    "coverage",
    "generated",
    ".cache",
    "**/*.test.*"
  ]
}
