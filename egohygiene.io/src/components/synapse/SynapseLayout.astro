---
import BaseHead from '../BaseHead.astro';
import Header from '../Header.astro';
import Footer from '../Footer.astro';
import FormattedDate from '../FormattedDate.astro';
import type { Synapse } from '../../../../src/models/Synapse';

const { synapse } = Astro.props as { synapse: Synapse };
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={synapse.title} description={synapse.content.slice(0, 120)} />
  </head>
  <body>
    <Header />
    <main class="max-w-3xl mx-auto p-4">
      <article>
        <h1 class="text-3xl font-bold mb-2">{synapse.title}</h1>
        <p class="text-sm text-gray-600 mb-4"><FormattedDate date={new Date(synapse.created)} /></p>
        <div class="prose mb-6">{synapse.content}</div>
        <p class="text-sm text-indigo-600">{synapse.tags.map(t => `#${t}`).join(' ')}</p>
      </article>
    </main>
    <Footer />
  </body>
</html>
